generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma" // 移除或注释掉这一行
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OpenRouterChat {
  id        String   @id @default(cuid())
  userId    String   // 关联到您的用户模型，如果需要的话
  // user      User     @relation(fields: [userId], references: [id]) // 如果您有 User 模型
  role      String   // 例如 "user", "assistant"
  content   String   @db.Text // 使用 @db.Text 以支持较长的内容
  model     String?  // 使用的模型，例如 "gpt-3.5-turbo"
  promptTokens Int?   // 输入 token 数量
  completionTokens Int? // 输出 token 数量
  totalTokens Int?   // 总 token 数量
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 如果需要，可以添加与 Supabase Auth 用户的关联
  // authUserId String? // Supabase Auth User ID
}
